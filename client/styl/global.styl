div, nav, footer, section
  box-sizing border-box
html, body
  width 100%
  height 100%
.btn, [type="text"]
  box-sizing border-box
.view
  position relative
  background-color #eaebed
  transition all .3s
  &.view-full_page
    position absolute
    width 100%
    height 100%
.row
  width 100%
  &:after
    content ''
    visibility hidden
    display block
    height 0
    clear both
.clearfix
  clear both

.full
  position absolute
  top 0
  left 0
  width 100%
  height 100%
.fixed-top
  position fixed
  top 0
.fixed-btm
  position fixed
  bottom 0
.ellipsis
  text-overflow ellipsis
  white-space nowrap
  overflow hidden
.block
  display block
.left
  float left
.right
  float right
.hide
  display none!important
.show
  display block!important
.space-3
  display inline-block
  width 3em

.border-btm
  border-bottom .5px solid c-border
